Import('env')

src_env = env.Clone()
src_env['extension'] = 'cpp'
src_env['srcroot'] += '/eventrpc'
src_env['objroot'] += '/eventrpc'

Export('src_env')

src_files = [
  'log.cpp',
  'time_utility.cpp',
  'monitor.cpp',
  'lookup3.cpp',
  'utility.cpp',
  'net_utility.cpp',
  'rpc_connection.cpp',
  'rpc_channel.cpp',
  'rpc_method_manager.cpp',
  'rpc_connection_manager.cpp',
  'thread.cpp',
  'rpc_server.cpp',
  'dispatcher.cpp',
  'meta.cpp',
]

src_env.StaticLibrary('eventrpc', src_files)
