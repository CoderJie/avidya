Import('env')

src_env = env.Clone()
src_env['extension'] = 'cpp'
src_env['srcroot'] += '/eventrpc'
src_env['objroot'] += '/eventrpc'

Export('src_env')

src_files = [
  'log.cpp',
  'lookup3.cpp',
  'utility.cpp',
  'net_utility.cpp',
  'connection.cpp',
  'rpc_method_manager.cpp',
  'reactor_rpc_server.cpp',
  'dispatcher.cpp',
  'meta.cpp',
]

src_env.StaticLibrary('eventrpc', src_files)
